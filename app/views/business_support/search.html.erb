<div class="article-container group business-support-index">

  <div class="block-2 filter-form">
    <div class="inner-block">
      <div class="filter-block">
        <h2>You can use the filters to only show schemes that you are eligible for</h2>
          
        <form method="get" action="search" id="document-filter" class="js-document-filter">
          <fieldset>
            <legend class="visuallyhidden">Filter available support</legend>

            <!-- Available support -->
            <div class="filter" id="support-filter">
              <h3 class="title">Available support</h3>

              <div class="filter-inner checkbox">
                <label for="finance">Finance</label>
                <input name="support_types[]" id="finance" type="checkbox" value="finance" checked="checked">
              </div>

              <div class="filter-inner checkbox">
                <label for="equity">Equity</label>
                <input name="support_types[]" id="equity" type="checkbox" value="equity" checked="checked">
              </div>

              <div class="filter-inner checkbox">
                <label for="grant">Grant</label>
                <input name="support_types[]" id="grant" type="checkbox" value="grant" checked="checked">
              </div>

              <div class="filter-inner checkbox">
                <label for="loan">Loan</label>
                <input name="support_types[]" id="loan" type="checkbox" value="loan" checked="checked">
              </div>

              <div class="filter-inner checkbox">
                <label for="expertise-and-advice">Expertise and advice</label>
                <input name="support_types[]" id="expertise-and-advice" type="checkbox" value="expertise-and-advice" checked="checked">
              </div>

              <div class="filter-inner checkbox">
                <label for="recognition-award">Recognition award</label>
                <input name="support_types[]" id="recognition-award" type="checkbox" value="recognition-award" checked="checked">
              </div>
            </div>

            <!-- Business location -->
            <div class="filter business-location" id="location-filter">
              <div class="filter-inner">
                <label for="select-location">Business location</label>
                <%= select_tag :location,
                      option_groups_from_collection_for_select(@locations, :regions, :name, :slug, :name, params[:location]),
                      :prompt => 'Any location',
                      :id => "select-location",
                      :class => "single-row-select"
                %>
              </div>
            </div>

            <!-- Number of employees -->
            <div class="filter" id="employee-count-filter">
              <div class="filter-inner">
                <label for="employee-count-option">Number of employees</label>
                <select class="single-row-select" id="employee-count-option" name="size"><option value="all" selected="">Any number of employees</option>
                  <option value="0-10">0 – 9</option>
                  <option value="11-249">10 – 249</option>
                  <option value="250-499">250 – 499</option>
                  <option value="500-999">500 – 999</option>
                  <option value="over-1000">1000+</option>
                </select>
              </div>
            </div>

            <!-- Activity or business type -->
            <div class="filter" id="business-type-filter">
              <div class="filter-inner">
                <label for="business-type-option">Activity or business type</label>
                <select class="single-row-select" id="business-type-option" name="sector"><option value="all" selected="">All activities and business types</option>
                  <option value="agriculture">Agriculture</option>
                  <option value="business-and-finance">Business and Finance</option>
                  <option value="construction">Construction</option>
                  <option value="education">Education</option>
                  <option value="health">Health</option>
                  <option value="hospitality-and-catering">Hospitality and Catering</option>
                  <option value="information-communication-and-media">Information, Communication and Media</option>
                  <option value="manufacturing">Manufacturing</option>
                  <option value="mining">Mining</option>
                  <option value="real-estate">Real Estate</option>
                  <option value="science-and-technology">Science and Technology</option>
                  <option value="service-industries">Service Industries</option>
                  <option value="transport-and-distribution">Transport and Distribution</option>
                  <option value="travel-and-leisure">Travel and Leisure</option>
                  <option value="utilities">Utilities</option>
                  <option value="wholesale-and-retail">Wholesale and Retail</option>
                </select>
              </div>
            </div>

            <!-- Business stage -->
            <div class="filter" id="business-stage-filter">
              <div class="filter-inner">
                <label for="business-stage-option">Business stage</label>
                <select class="single-row-select" id="business-stage-option" name="stage"><option value="all" selected="">All business stages</option>
                  <option value="pre-start">Pre-start</option>
                  <option value="start-up">Start-up</option>
                  <option value="grow-and-sustain">Grow and sustain</option>
                  <option value="exiting-a-business">Exiting a business</option>
                </select>
              </div>
            </div>

            <div class="filter" id="filter-submit">
              <div class="filter-inner">
                <div class="submit">
                  <input class="button" name="commit" type="submit" value="Refresh results">
                </div>
              </div>
            </div>

          </fieldset>
        </form>
      </div>
    </div>
  </div>

  <div class="block-4 filtered-results">
    <div class="inner-block">

      <!-- Summary -->
      <div class="filter-results-summary" aria-live="polite" aria-atomic="true">
        <h3>Available schemes<br /><span><%= @schemes.count %></span></h3>
      </div>

      <!-- Results -->
      <ul class="results-list">
        <% @schemes.each do |scheme| %>
        <li class="scheme">
          <h3><a href="<%= scheme.web_url %>"><%= scheme.title %></a></h3>
          <p><%= scheme.short_description %></p>
        </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
